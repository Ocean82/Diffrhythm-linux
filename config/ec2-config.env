# DiffRhythm EC2 Configuration
# Server: ubuntu@52.0.207.242
# SSH Key: C:\Users\sammy\.ssh\server_saver_key

# API Configuration
HOST=0.0.0.0
PORT=8000
API_PREFIX=/api/v1
DEBUG=false

# Device Configuration
DEVICE=cpu
MODEL_MAX_FRAMES=2048

# Model Cache Directory
MODEL_CACHE_DIR=/opt/diffrhythm/pretrained
HUGGINGFACE_HUB_CACHE=/opt/diffrhythm/pretrained

# Job Queue
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Generation Settings
DEFAULT_AUDIO_LENGTH=95
MAX_AUDIO_LENGTH=285
MAX_BATCH_SIZE=4
GENERATION_TIMEOUT=2400

# CPU Optimization (High Quality Settings)
# For high quality: use 32 steps, 4.0 CFG (slower but better)
# For balanced: use 16 steps, 3.0 CFG (faster, good quality)
# For fast: use 8 steps, 2.5 CFG (fastest, acceptable quality)
CPU_STEPS=32
CPU_CFG_STRENGTH=4.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
ENABLE_RATE_LIMIT=true
RATE_LIMIT_PER_HOUR=10
API_KEY=
CORS_ORIGINS=*

# Monitoring
ENABLE_METRICS=true
METRICS_PATH=/api/v1/metrics

# Docker Compose
COMPOSE_PROJECT_NAME=diffrhythm

# Stripe (set on server .env; ec2-config.env is template only)
# Add real keys to /opt/diffrhythm/.env after deploy. See STRIPE_WEBHOOK_CONFIGURATION_FINAL.md
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
REQUIRE_PAYMENT_FOR_GENERATION=true
